<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/negro">

    <ScrollView
        android:id="@+id/svModificarFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvModificarTitulo"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/blanco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modificar Juego"
                android:layout_centerHorizontal="true"></TextView>

            <LinearLayout
                android:id="@+id/llModificarBloqueNombreJuego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvModificarTitulo"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:text="Nombre :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"
                    ></TextView>

                <EditText
                    android:id="@+id/etModificarNombreJuego"
                    android:hint="Introduce su nombre"
                    android:textColorHint="@color/blanco"
                    android:textColor="@color/blanco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llModificarBloqueDescripcionJuego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llModificarBloqueNombreJuego"
                android:orientation="vertical">

                <TextView
                    android:text="Descripción: "
                    android:gravity="center_horizontal"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></TextView>

                <EditText
                    android:id="@+id/etModificarDescripcionJuego"
                    android:hint="Introduzca una descripción..."
                    android:textColorHint="@color/blanco"
                    android:textColor="@color/blanco"
                    android:gravity="center"
                    android:minHeight="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llModificarBloquePrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/llModificarBloqueDescripcionJuego">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Precio: "
                    android:textColor="@color/blanco"
                    ></TextView>

                <EditText
                    android:id="@+id/etModificarPrecioJuego"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Introduce un precio"
                    android:textColorHint="@color/blanco"
                    android:textColor="@color/blanco"
                    android:inputType="number"
                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llModificarBloqueImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llModificarBloquePrecio"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btnModificarImagenJuego"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar Imagen..."
                    android:gravity="center"
                    android:textColor="@color/negro"
                    android:textStyle="bold"
                    ></Button>

                <ImageView
                    android:id="@+id/ivModificarImagenJuego"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    ></ImageView>

                <Button
                    android:id="@+id/btnModificarModificarJuego"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modificar"
                    android:textColor="@color/negro"
                    android:textStyle="bold"></Button>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>



</RelativeLayout>

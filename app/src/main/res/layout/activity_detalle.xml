<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDetalleTitulo"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/negro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar Juego"
            android:layout_centerHorizontal="true"></TextView>

        <LinearLayout
            android:id="@+id/llDetalleBloqueNombreJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDetalleTitulo"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:text="Nombre :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:textStyle="bold"
                ></TextView>

            <EditText
                android:id="@+id/etDetalleNombreJuego"
                android:hint="Introduce su nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDetalleBloqueDescripcionJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llDetalleBloqueNombreJuego"
            android:orientation="vertical">

            <TextView
                android:text="Descripción: "
                android:gravity="center_horizontal"
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></TextView>

            <EditText
                android:id="@+id/etDetalleDescripcionJuego"
                android:hint="Introduzca una descripción..."
                android:gravity="center"
                android:minHeight="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDetalleBloquePrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/llDetalleBloqueDescripcionJuego">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Precio: "
                android:textColor="@color/negro"
                ></TextView>

            <EditText
                android:id="@+id/etDetallePrecioJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Introduce un precio"
                android:inputType="number"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDetalleBloqueImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llDetalleBloquePrecio"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnDetalleImagenJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar Imagen..."
                android:gravity="center"
                android:textColor="@color/negro"
                android:textStyle="bold"
                ></Button>

            <ImageView
                android:id="@+id/ivDetalleImagenJuego"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="gone"
                ></ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDetalleBloqueGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/llDetalleBloqueImagen"
            android:gravity="center">

            <Button
                android:id="@+id/btnDetalleDialogoGeneros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:text="Géneros"></Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDetalleBloquePlataforma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/llDetalleBloqueGenero"
            android:gravity="center">

            <Button
                android:id="@+id/btnDetalleDialogoPlataformas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:text="Plataformas"></Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDetalleBloqueModificarJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/llDetalleBloquePlataforma"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btnDetalleModificarJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modificar"
                android:textColor="@color/negro"
                android:textStyle="bold"
                ></Button>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>